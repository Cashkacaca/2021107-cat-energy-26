<header class="main-header">
	<div class="main-header__wrapper">
		<a class="main-header__logo" href="index.html" {% if permalink == "index.html" %}aria-current="page"{% endif %}>
			<img class="main-header__logo-image" src="img/logo-mobile.svg" width="34" height="38" alt="Магазин CAT ENERGY.">
		</a>
		<a class="main-header__logo" href="index.html" {% if permalink == "index.html" %}aria-current="page"{% endif %}>
			<img class="main-header__logo-text" src="img/logo-mobile-text.svg" width="101" height="18" alt="Магазин CAT ENERGY.">
			<span class="visually-hidden">Магазин CAT ENERGY</span>
		</a>
		<nav class="main-nav">
			<button class="main-nav__toggle" type="button">
				<span class="visually-hidden">Открыть меню</span>
			</button>
			{# Для вызова меню выбрать кнопку "main-nav__toggle" Tab #}
			<div class="main-nav__wrapper main-nav__wrapper--modal">
				<ul class="main-nav__list site-list">
					{% for page in pages %}
					<li class="site-list__item">
						<a class="site-list__link" href="{{ page.path }}" {% if permalink == page.path %} aria-current="page" {% endif %}>{{ page.name }}</a>
					</li>
					{% endfor %}
				</ul>
			</div>
		</nav>
	</div>
</header>
